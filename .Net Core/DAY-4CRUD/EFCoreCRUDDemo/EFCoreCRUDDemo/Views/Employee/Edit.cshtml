@{
    ViewData["Title"] = "Edit Employee";
}
@model Employee
<h1 class="bg-info text-white">Edit Employee</h1>
<a asp-action="Index" class="btn btn-secondary">Back</a>
<form method="post">
    <div class="form-group">
        <label asp-for="name">Employee Name</label>
        <input asp-for="name" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="designation">Designation</label>
        <input asp-for="designation" type="text" asp-items="ViewBag.Department" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Department">Department Id</label>
        <input asp-for="DepartmentId" type="text" class="form-control" />
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Update EMployee</button>
</form>