@model Reservation

@{
    ViewBag.Title = "Update Reservation by ID";
}

<a asp-action="Index" class="btn btn-sm btn-info">Back</a>
<h3>@ViewBag.StatusCode</h3>
<hr />
<form asp-action="UpdateReservation" method="post">
    <div class="form-group">
        <label for="id">Id: </label>
        <input class="form-control" asp-for="id" readonly />
    </div>
    <div class="form-group">
        <label for="name">Name: </label>
        <input class="form-control" asp-for="name" />
    </div>
    <div class="form-group">
        <label for="startLocation">StartLocation: </label>
        <input class="form-control" asp-for="startLocation" />
    </div>
    <div class="form-group">
        <label for="endLocation">EndLocation: </label>
        <input class="form-control" asp-for="endLocation" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary"> Update</button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{

    <h2>Booking Detail</h2>



    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>StartLocation</th>
                <th>EndLocation</th>



            </tr>
        </thead>
        <tbody>

            <tr>
                <td>@Model.id</td>
                <td>@Model.name</td>
                <td>@Model.startLocation</td>
                <td>@Model.endLocation</td>
            </tr>
        </tbody>
    </table>



}